<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
		PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
		"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.mvc2.mapper.SysUserMapper">

	<resultMap type="com.mvc2.domain.SysUser" id="UserResult">
		<id property="id"     column="id"      />
		<result property="name" column="name"/>
		<result property="pwd" column="pwd"/>
	</resultMap>
	<delete id="deleteUserById"  parameterType="Long" >
		delete from `user` where id = #{id}
	</delete>
	<select id="getUserById" parameterType="Long" resultMap="UserResult">
		select * from `user` where id = #{id}
	</select>
	<!--	<insert id="addUser" parameterType="com.mvc2.domain.User" >-->
	<insert id="addUser" parameterType="map" >
		insert into `user` (id, name, pwd) values (#{id},#{name},#{pwd})
	</insert>
	<select id="selectLike" parameterType="String" resultType="hello">
		select * from `user` where name like  #{value}
	</select>

	<select id="selectUsersPage" parameterType="map" resultType="hello">
		select * from `user` where 1=1 limit #{startIndex},#{pageSize}
	</select>
</mapper>